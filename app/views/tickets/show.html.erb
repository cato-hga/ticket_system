

<p>
  <strong>Title:</strong>
  <%= @ticket.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @ticket.description %>
</p>

<p>
  <strong>Severity:</strong>
  <%= @ticket.severity %>
</p>

<p>
  <strong>User:</strong>
  <%= @ticket.assigned_user %>
</p>
<p>
  <strong>State:</strong>
  <%= @ticket.state %>
</p>

<p>
  <strong>Creation date:</strong>
  <%= @ticket.created_at.strftime("%m-%d-%Y") %>
</p>

<% if current_user && (@ticket.user == current_user) %>
  <td><%= link_to 'Edit', edit_ticket_path(@ticket) %></td> |
<% end %>
<%= link_to 'Back', tickets_path %>
